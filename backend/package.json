{
  "name": "fluvia-backend",
  "version": "1.0.0",
  "description": "Fluvia backend API with TypeScript and Express",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "scripts": {
    "build": "pnpm run clean && tsc -p .",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rimraf dist",
    "railway:build": "pnpm run build",
    "railway:start": "node dist/index.js",
    "railway:deploy": "pnpm run clean && pnpm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:fix:all": "pnpm run lint:fix && pnpm run format",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "fix": "pnpm run lint:fix:all",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up backend",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback",
    "db:migrate:make": "knex migrate:make",
    "db:seed": "knex seed:run",
    "db:seed:make": "knex seed:make",
    "db:seed:complete": "knex seed:run --specific=01_complete_data.ts",
    "db:seed:status": "knex seed:list",
    "db:create": "createdb fluvia",
    "db:drop": "dropdb fluvia"
  },
  "keywords": [
    "typescript",
    "express",
    "api",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@privy-io/server-auth": "^1.31.1",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "viem": "^2.33.3"
  },
  "devDependencies": {
    "@railway/cli": "^4.6.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "only-allow": "^1.2.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.0"
  }
}
