{
  "name": "fluvia-backend",
  "version": "1.0.0",
  "description": "Fluvia backend API with TypeScript and Express",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "pnpm run clean && tsc -p .",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:fix:all": "pnpm run lint:fix && pnpm run format",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "fix": "pnpm run lint:fix:all",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up backend",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback",
    "db:migrate:make": "knex migrate:make",
    "db:seed": "knex seed:run",
    "db:seed:make": "knex seed:make",
    "db:seed:complete": "knex seed:run --specific=01_complete_data.ts",
    "db:seed:status": "knex seed:list",
    "db:create": "createdb fluvia",
    "db:drop": "dropdb fluvia",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [
    "typescript",
    "express",
    "api",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@privy-io/server-auth": "^1.31.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@railway/cli": "^4.6.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.0"
  }
}
